<assembly>
  <id>distribution</id>
  <formats>
    <format>zip</format>
  </formats>
  <includeBaseDirectory>true</includeBaseDirectory>
  <dependencySets>
    <dependencySet>
      <includes>
        <include>org.mayocat.shop:mayocat-shop-application</include>
        <include>postgresql:postgresql</include>
        <include>commons-dbcp:commons-dbcp</include>
      </includes>
      <outputDirectory>lib/</outputDirectory>
      <unpack>false</unpack>
      <!-- Needed to prevent warning since our project has a pom packaging and is not producing any artifact -->
      <useProjectArtifact>false</useProjectArtifact>
    </dependencySet>
    <dependencySet>
      <includes>
        <include>org.mayocat.shop:mayocat-shop-client</include>
      </includes>
      <outputDirectory>client</outputDirectory>
      <unpack>true</unpack>
      <!-- Needed to prevent warning since our project has a pom packaging and is not producing any artifact -->
      <useProjectArtifact>false</useProjectArtifact>
    </dependencySet>
    <dependencySet>
      <includes>
        <include>org.mayocat.shop:mayocat-shop-themes</include>
      </includes>
      <unpackOptions>
        <excludes>
            <exclude>META-INF/**</exclude>
        </excludes>
      </unpackOptions>
      <outputDirectory>data</outputDirectory>
      <unpack>true</unpack>
      <!-- Needed to prevent warning since our project has a pom packaging and is not producing any artifact -->
      <useProjectArtifact>false</useProjectArtifact>
    </dependencySet>
  </dependencySets>
  <fileSets>
    <fileSet>
      <directory>src/main/resources</directory>
        <filtered>true</filtered>
        <includes>
          <include>**/*.sh</include>
        </includes>
      <outputDirectory>/</outputDirectory>
      <fileMode>755</fileMode>
    </fileSet>
    <fileSet>
      <directory>src/main/resources</directory>
        <filtered>true</filtered>
        <excludes>
          <exclude>**/*.sh</exclude>
        </excludes>
      <outputDirectory>/</outputDirectory>
    </fileSet>
  </fileSets>
</assembly>
