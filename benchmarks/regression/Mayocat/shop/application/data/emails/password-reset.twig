{% extends 'base-mail.twig' %}

{% block subject %}
    Your password reset request
{% endblock %}

{% block html_content %}
    Hello,<br/>
    <br/>
    You've asked for to reset your password on {{ siteName }}.<br/>
    <br/>
    In order to complete the password reset, please open the link below in your browser :<br/>
    <br/>
    {{ resetLink }}<br/>
    <br/>
    If you have not requested a password reset, please just ignore this message.<br/>
    <br/>
    Thanks.<br/>
{% endblock %}