{% extends 'base-mail.twig' %}

{% block subject %}
    Votre commande sur {{ siteName }}
{% endblock %}

{% block html_content %}
    Bonjour,<br/>
    <br/><br/>
    Votre commande numéro {{ orderId }} sur {{ siteName }} a été validée et sera traitée rapidement.<br/>
    <br/>
    Voici les produits que vous avez commandé :<br/>
    {% for item in items %}
        - {{ item.title }}<br/>
        Quantity: {{ item.quantity }}<br/>
        Unit price: {{ item.unitPrice }}<br/>
    {% endfor %}
    Total produits: {{ itemsTotal }}<br/>
    <br/>
    {% if shippingTotal -%}
        Livraison: {{ shipping.title }} {{ shippingTotal }}<br/>
        <br/>
    {% endif %}
    Total: {{ grandTotal }}<br/>
    <br/>
    Vos informations<br/>
    <br/>
    {{ customer.firstName }} {{ customer.lastName }}<br/>
    {{ customer.email }}<br/>
    {% if customer.phone %}{{ customer.phone }}<br/>{% endif %}
    <br/>
    {% if deliveryAddress %}
        Adresse de livraison:<br/>
        {{ deliveryAddress.street }}<br/>
        {{ deliveryAddress.zip }} {{ deliveryAddress.city }}<br/>
        {{ deliveryAddress.country }}<br/>
        <br/>
    {%- endif %}
    {% if billingAddress %}
        Adresse de facturation:<br/>
        {{ billingAddress.street }}<br/>
        {{ billingAddress.zip }} {{ billingAddress.city }}<br/>
        {{ billingAddress.country }}<br/>
        <br/>
    {%- endif %}
{% endblock %}
